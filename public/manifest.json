{
  "manifest_version": 3,
  "name": "notion reads extension",
  "description": "easily add book details to your notion reading list",
  "version": "1.0",
  "action": {
    "default_icon": "icon.png",
    "default_title": "notion reads extension",
    "default_popup": "index.html"
  },
  "background": {
    "service_worker": "./static/js/background.js"
  },
  "permissions": ["storage", "scripting", "webNavigation", "tabs"],
  "host_permissions": ["https://*/*"]
}
